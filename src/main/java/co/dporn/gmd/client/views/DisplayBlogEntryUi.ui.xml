<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:m='urn:import:gwt.material.design.client.ui'
	xmlns:ma="urn:import:gwt.material.design.addins.client"
	xmlns:d="urn:import:co.dporn.gmd.client.views">
	<ui:style>
	.container {
		padding-left: 250px;
		padding-right: 8px;
		padding-top: 100px;
	}
	
	.label {
		font-size: 2em;
		font-weight: bold;
		margin-left: 12px;
		margin-right: 12px;
		text-align: center;
	}
	
	.row {
		margin-top: 12px;
		margin-left: 12px;
		margin-right: 12px;
	}
	</ui:style>
	<!-- Container -->
	<m:MaterialContainer ui:field="mainContent"
		addStyleNames="{style.container}">
		<d:ChannelHeaderUi ui:field="header" />
		<m:MaterialLabel ui:field="title" text=""
			addStyleNames="{style.label}" />
		<m:MaterialRow ui:field="post"
			addStyleNames="{style.row}" />
			<d:VoteBarUI ui:field="voteBarUi"></d:VoteBarUI>
			<m:MaterialRow ui:field="comments"
			addStyleNames="{style.row}" />
		<m:MaterialProgress style="margin-bottom: 32px;" ui:field="progress"></m:MaterialProgress>
	</m:MaterialContainer>
</ui:UiBinder> 
