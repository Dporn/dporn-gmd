<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:m='urn:import:gwt.material.design.client.ui'
	xmlns:ma="urn:import:gwt.material.design.addins.client">
	<ui:style>
	.header {
		height: 200px;
		margin: 0px;
		padding: 0px;
		margin-top: -42px;
		margin-right: -140px;
		background-position: 50% 50%;
		background-repeat: no-repeat;
		background-size: cover;
		background-position: center;
		overflow: hidden;
	}
	
	.info-container {
		margin: 0px;
		padding: 0px;
		padding-top: 36px;
		padding-left: 36px;
	}
	
	.avatar-container {
		margin: 0px;
		display: inline-block;
		margin-right: 36px;
	}
	
	.avatar {
		width: 128px;
		min-width: 128px;
		height: 128px;
		border-radius: 50%;
	}
	
	.author-name {
		margin: 0px;
		padding: 0px;
		text-shadow: 0px 0px 4px black;
		font-size: 2.75em;
		color: white;
		text-shadow: black;
		overflow: hidden;
		display: block;
	}
	
	.blurb {
		margin: 0px;
		padding: 0px;
		color: white;
		text-shadow: 0px 0px 4px black;
		font-size: 1.75em;
		overflow: hidden;
		display: block;
	}
	
	.inline {
		display: inline
	}
	
	.info {
		width: literal("calc(100% - 172px)");
		margin: 0px;
		margin-left: auto;
		margin-right: auto;
		padding: 0px;
		overflow: hidden;
		display: inline-block;
		text-align: center;
	}
	</ui:style>
	<m:MaterialHeader addStyleNames="{style.header}"
		ui:field="header">
		<m:MaterialPanel
			addStyleNames="{style.info-container}">
			<m:MaterialPanel 
				addStyleNames="{style.avatar-container}">
				<m:MaterialPanel ui:field="avatarImage"
					addStyleNames="{style.avatar}"></m:MaterialPanel>
			</m:MaterialPanel>
			<m:MaterialPanel hideOn="HIDE_ON_SMALL_DOWN"
				addStyleNames="{style.info}">
				<m:MaterialPanel addStyleNames="{style.author-name}">
					<m:MaterialLabel ui:field="displayName" text="@" addStyleNames="{style.inline}" />
				</m:MaterialPanel>
				<m:MaterialPanel addStyleNames="{style.blurb}">
					<m:MaterialLabel ui:field="authorBlurb" text="..." addStyleNames="{style.inline}"/>
				</m:MaterialPanel>
			</m:MaterialPanel>
		</m:MaterialPanel>
	</m:MaterialHeader>
</ui:UiBinder> 