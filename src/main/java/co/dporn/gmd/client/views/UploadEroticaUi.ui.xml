<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:m='urn:import:gwt.material.design.client.ui'
	xmlns:ma="urn:import:gwt.material.design.addins.client">
	<ui:style>
	.container {
		padding-left: 250px;
		padding-right: 8px;
		padding-top: 100px;
	}
	
	.label {
		font-size: 2em;
		font-weight: bold;
		margin-left: 12px;
	}
	</ui:style>
	<!-- Container -->
	<m:MaterialContainer ui:field="mainContent"
		addStyleNames="{style.container}">
		<m:MaterialRow margin="8">
			<m:MaterialTextBox label="TITLE" />
		</m:MaterialRow>
		<m:MaterialRow margin="8">
			<ma:autocomplete.MaterialAutoComplete
				ui:field="ac" type="CHIP" placeholder="TAGS" />
			<m:MaterialButton float="RIGHT" ui:field="btnTagSets" type="OUTLINED" margin="8"
				text="VIEW RECENT TAG SETS" />
		</m:MaterialRow>
		<m:MaterialRow margin="8">
			<ma:richeditor.MaterialRichEditor
				placeholder="Type your erotic fiction here!" />
		</m:MaterialRow>
		<m:MaterialRow margin="8" textAlign="RIGHT">
			<m:MaterialButton ui:field="btnReset" margin="8"
				text="RESET" />
			<m:MaterialButton ui:field="btnSubmit" margin="8"
				text="SUBMIT" />
		</m:MaterialRow>
	</m:MaterialContainer>
</ui:UiBinder> 