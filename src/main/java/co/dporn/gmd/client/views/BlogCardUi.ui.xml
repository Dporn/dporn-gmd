<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:m='urn:import:gwt.material.design.client.ui'
	xmlns:ma="urn:import:gwt.material.design.addins.client">
	<ui:style>
	
	</ui:style>
	<m:MaterialColumn grid="l3 m4 s12">
		<m:MaterialCard ui:field="card" opacity="0">
			<m:MaterialCardImage height="160px" width="400px"
				style="overflow: hidden;" marginBottom="-32">
				<m:MaterialImage ui:field="postImage"
					layoutPosition="ABSOLUTE" url="images/coverImagePlaceholder.png" />
			</m:MaterialCardImage>
			<m:MaterialCardContent height="120px">
				<m:MaterialImage ui:field="avatarImage"
					layoutPosition="ABSOLUTE" marginTop="-18" circle="true"
					width="64px" height="64px" url="images/avatarImagePlaceholder.png" />
				<m:MaterialLabel truncate="true"
					ui:field="authorName" text="@" marginTop="48" fontSize="1.25em" />
				<m:MaterialLabel truncate="true"
					ui:field="authorBlurb" opacity="0.6" marginTop="4" text="..." />
			</m:MaterialCardContent>
			<m:MaterialCardAction>
				<m:MaterialLink text="FOLLOW" />
			</m:MaterialCardAction>
		</m:MaterialCard>
	</m:MaterialColumn>
</ui:UiBinder> 