<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:m='urn:import:gwt.material.design.client.ui'
	xmlns:ma="urn:import:gwt.material.design.addins.client"
	xmlns:d="urn:import:co.dporn.gmd.client.views"
	>
	<ui:style>
	.no-overflow {
		overflow: hidden;
	}
	
	.column {
		max-width: 400px;
	}
	
	.image-card {
		width: 100%;
		height: 100%;
		margin-bottom: 0px;
	}
	
	.image {
		width: 100%;
	}
	
	.blog-card {
		height: 80px;
		margin-top: 0px;
	}
	
	.author-name {
		margin-top: -8px;
		font-size: 1.25em;
	}
	
	.blurb {
		padding: 0px;
		margin-top: 0px;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
	}
	
	iframe {
		box-sizing: content-box;
		border-style: none;
		border: 0px;
		overflow: hidden;
		padding: 0px;
		margin: 0px;
	}
	</ui:style>
	<m:MaterialColumn grid="l3 m4 s12"
		addStyleNames="{style.column}">
		<m:MaterialCard ui:field="card"
			addStyleNames="{style.no-overflow}">
			<m:MaterialCardImage
				addStyleNames="{style.image-card} {style.no-overflow}">
				<m:MaterialVideo fullscreen="true"
					ui:field="videoEmbedUrl" />
			</m:MaterialCardImage>
			<m:MaterialCardContent
				addStyleNames="{style.blog-card}">
				<m:MaterialLabel truncate="true"
					ui:field="authorName" text="@" addStyleNames="{style.author-name}" />
				<m:MaterialLabel addStyleNames="{style.blurb}"
					ui:field="authorBlurb" text="..." />
			</m:MaterialCardContent>
			<m:MaterialCardAction>
				<d:DpornLink ui:field="viewLink" text="VIEW" />
				<d:DpornLink ui:field="viewChannel" text="CHANNEL" float="RIGHT" />
			</m:MaterialCardAction>
		</m:MaterialCard>
	</m:MaterialColumn>
</ui:UiBinder> 